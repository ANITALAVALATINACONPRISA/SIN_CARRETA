  "causal_verification_templates": {
    "D1": {
      "dimension_name": "Diagnóstico y Líneas Base",
      "required_elements": [
        "baseline_with_source",
        "time_series_minimum_3_years",
        "measurement_unit",
        "coverage_specification",
        "data_quality_assessment"
      ],
      "validation_patterns": [
        "\\d{4}",
        "fuente:|según|datos de",
        "DANE|DNP|SISPRO|SIVIGILA|Ministerio|Secretaría",
        "línea base|base line|año base",
        "serie.*temporal|históric|tendencia",
        "\\d+(\\.\\d+)?\\s*%",
        "tasa de|índice de|proporción de|cobertura de"
      ],
      "minimum_quantitative_indicators": 3,
      "minimum_sources": 2,
      "minimum_time_series_years": 3,
      "scoring_weights": [0.25, 0.20, 0.25, 0.15, 0.15]
    },
    "D2": {
      "dimension_name": "Actividades Formalizadas",
      "required_elements": [
        "responsible_entity",
        "input_specification",
        "output_definition",
        "timeline_calendar",
        "unit_cost_or_budget"
      ],
      "table_structure_indicators": [
        "tabla|cuadro|matriz",
        "responsable|actor|entidad",
        "insumo|recurso|input",
        "producto|output|entregable",
        "cronograma|calendario|plazo|trimestre|año",
        "costo|presupuesto|valor|monto"
      ],
      "causal_mechanism_patterns": [
        "mecanismo|teoría de cambio|lógica causal",
        "porque|dado que|en consecuencia",
        "genera|produce|conlleva|ocasiona",
        "población diana|población objetivo|beneficiarios"
      ],
      "minimum_formalized_activities": 3,
      "scoring_weights": [0.20, 0.20, 0.15, 0.20, 0.15, 0.10]
    },
    "D3": {
      "dimension_name": "Productos Verificables",
      "required_elements": [
        "indicator_formula",
        "data_source",
        "baseline_value",
        "target_value",
        "measurement_mechanism"
      ],
      "indicator_verification_patterns": [
        "indicador|métrica|medición",
        "fórmula|cálculo|metodología",
        "fuente de verificación|medio de verificación",
        "línea base.*\\d+",
