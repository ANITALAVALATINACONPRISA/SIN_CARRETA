      ],
      "minimum_indicators_with_baseline": 3,
      "scoring_weights": [0.20, 0.20, 0.20, 0.20, 0.20]
    },
    "D4": {
      "dimension_name": "Resultados Medibles",
      "required_elements": [
        "outcome_metric",
        "baseline_value",
        "target_value",
        "maturation_window",
        "causal_chain_explicit"
      ],
      "outcome_patterns": [
        "resultado|outcome|efecto",
        "cambio en|variación en|mejora en",
